{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true
  },
  "include": [
    "src/**/*"
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}